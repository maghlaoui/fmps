{% extends '::base.html.twig' %}

{% block body %}
<h3>Liste des enfants par classe</h3>

<div class="pull-right">
    <a href="{{ path('enfantclasse_new') }}">
        <span><i class="icon-plus-sign icon-white"></i> Ajouter un enfant dans une classe</span>
    </a>
</div>

{% if entities.count == 0 %}
    <div class="flash notice">Désolé. Aucun enfant n'a été trouvé</div>
{% else %}

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Enfant</th>
            <th>Classe</th>
            <th>Année scolaire</th>
            <th width="280">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('enfantclasse_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.enfantId }}</td>
            <td>{{ entity.classeId }}</td>
            <td>{{ entity.anneeScolaireId }}</td>
            <td>
                <ul>
	                    <li><a href="{{ path('enfantclasse_show', { 'id': entity.id }) }}"><span class="detail">Détail</span></a></li>
	                    <li><a href="{{ path('enfantclasse_edit', { 'id': entity.id }) }}"><span class="edit">Editer</span></a></li>
	                    <li><a href="{{ path('enfantclasse_delete', { 'id': entity.id }) }}" rel="nofollow" data-method="post" data-remote="true" data-confirm="êtes vous sûre?" class="delete_entity"><span class="delete">Supprimer</span></a></li>
	                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endif %}
{% endblock %}