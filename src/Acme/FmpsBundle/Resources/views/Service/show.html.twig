{% extends '::base.html.twig' %}

{% block body %}
<h3>Service</h3>

<table class="table table-hover">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Libellé</th>
            <td>{{ entity.libelleService }}</td>
        </tr>
        <tr>
            <th>Dem service</th>
            <td>{{ entity.demService }}</td>
        </tr>
				<tr>
            <th>Obligatoire</th>
            <td>{{ entity.obligatoire == 1 ? 'oui' : 'non' }}</td>
        </tr>
        <tr>
            <th>Période</th>
            <td>{{ entity.periode }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('service') }}">
            <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
    <li>
        <a href="{{ path('service_edit', { 'id': entity.id }) }}">
            <span class="edit">Editer</span>
        </a>
    </li>
    <li>
        <form action="{{ path('service_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger" data-confirm="êtes vous sûre de vouloir supprimer?"><i class="icon-trash icon-white"></i> Supprimer</button>
        </form>
    </li>
</ul>
{% endblock %}