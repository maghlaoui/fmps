{% extends '::base.html.twig' %}

{% block body %}
<h3>Mon profile</h3>

<table class="table table-hover">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Identifiant</th>
            <td>{{ entity.username }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Active</th>
            <td>{{ entity.enabled == 1 ? 'Oui' : 'Non' }}</td>
        </tr>
        <tr>
            <th>Dernière connexion</th>
            <td>{{ entity.lastLogin|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Fermé</th>
            <td>{{ entity.locked == 1 ? 'Oui' : 'Non' }}</td>
        </tr>
        <tr>
            <th>Expiré</th>
            <td>{{ entity.expired == 1 ? 'Oui' : 'Non' }}</td>
        </tr>

        <tr>
            <th>Rôles</th>
            <td><ul>
                {% for role in entity.roles %}
                    <li>{% if role in default_roles|keys %} {{ default_roles[role] }} {% endif %}</li>
                {% endfor %}</ul>
            </td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('user_edit', { 'id': entity.id }) }}">
            <span class="edit">Modifier mon profile</span>
        </a>
    </li>
</ul>
{% endblock %}