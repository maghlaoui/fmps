{% extends '::base.html.twig' %}

{% block body %}
<h3>Liste des demandes d'inscription</h3>
<div class="pull-right">
    <a href="{{ path('preinscription_new') }}">
        <span><i class="icon-plus-sign icon-white"></i> Ajouter une demande</span>
    </a>
</div>

<form action="{{ path('preinscription') }}" method="get" {{ form_enctype(form) }}>
    <table id="search">
        <tr>
            <td>{{ form_label(form.ecole) }}</td>
            <td>{{ form_label(form.anneeScolaire) }}</td>
            <td>{{ form_label(form.section) }}</td>
						<td>{{ form_label(form.category) }}</td>
						<td>{{ form_label(form.nomEnfant) }}</td>
						<td>{{ form_label(form.nomTiteur) }}</td>
            <td></td>
        </tr>
        <tr>
            <td>{{ form_widget(form.ecole) }}</td>
            <td>{{ form_widget(form.anneeScolaire) }}</td>
            <td>{{ form_widget(form.section) }}</td>
						<td>{{ form_widget(form.category) }}</td>
						<td>{{ form_widget(form.nomEnfant) }}</td>
						<td>{{ form_widget(form.nomTiteur) }}</td>
            <td class="pb10"><button type="submit" class="btn">Rechercher</button></td>
        </tr>
    </table>
</form>


<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom enfant</th>
            <th>Prénom enfant</th>
            <th>Nom tuteur</th>
            <th>Prénom titeur</th>
            <th>Section</th>
            <th>Année scolaire</th>
            <th>Ecole</th>
						<th>Catégorie</th>
            <th>Commentaire</th>
            <th width="150">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('preinscription_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nomEnfant }}</td>
            <td>{{ entity.prenomEnfant }}</td>
            <td>{{ entity.nomTiteur }}</td>
            <td>{{ entity.prenomTiteur }}</td>
            <td>{{ entity.section }}</td>
            <td>{{ entity.anneeScolaire }}</td>
            <td>{{ entity.ecole }}</td>
            <td>{{ entity.category }}</td>
            <td>{{ entity.commentaire }}</td>

            <td>
                <ul>
                    <li><a href="{{ path('preinscription_show', { 'id': entity.id }) }}"><span class="detail">D&eacute;tail</span></a></li>
                    <li><a href="{{ path('preinscription_edit', { 'id': entity.id }) }}"><span class="edit">Editer</span></a></li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
