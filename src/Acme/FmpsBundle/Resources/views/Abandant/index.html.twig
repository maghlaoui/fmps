{% extends '::base.html.twig' %}

{% block body %}
<h3>Liste des abandants</h3>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Inscription</th>
            <th>Motif</th>
            <th>Commentaire</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
            <td><a href="{{ path('abandant_show', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
            <td>{{ entity.inscriptionId }}</td>
            <td>{{ entity.motifSortie }}</td>
            <td>{{ entity.commentaire }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('abandant_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('abandant_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
		{% else %}
		<div class="flash notice">Désolé. Aucun abandant n'a été trouvé</div>
    {% endfor %}
    </tbody>
</table>

{% endblock %}