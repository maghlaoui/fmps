{% extends '::base.html.twig' %}

{% block body %}
<h3>Facture</h3>

<table class="table table-hover">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Ecole</th>
            <td>{{ entity.ecole }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.date|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Objet</th>
            <td>{{ entity.objet }}</td>
        </tr>
        <tr>
            <th>Montant</th>
            <td>{{ entity.montant|number_format(2, '.', ' ') }}</td>
        </tr>
        <tr>
            <th>Fournisseur</th>
            <td>{{ entity.fournisseur }}</td>
        </tr>
        <tr>
            <th>Budget</th>
            <td>{{ entity.budget }}</td>
        </tr>
        <tr>
            <th>Numéro de la facture</th>
            <td>{{ entity.numFacture }}</td>
        </tr>
        <tr>
            <th>Etat de la facture</th>
            <td>{{ entity.etatFacture }}</td>
        </tr>
				<tr>
            <th>Mode de paiement</th>
            <td>{{ entity.modePayement }}</td>
        </tr>
				{% if entity.numeroCheque %}
				<tr>
            <th>Numéro de chèque ou de virement</th>
            <td>{{ entity.numeroCheque }}</td>
        </tr>
				{% endif %}
        <tr>
            <th>Date de paiement de la facture</th>
            <td>{% if entity.datePaiementFacture %}{{ entity.datePaiementFacture|date('Y-m-d') }}{% endif %}</td>
        </tr>
        {% if entity.webPath %}
        <tr>
            <th>Fichier</th>
            <td><a href="{{ asset(entity.webPath) }}" target="_blank">Télécharger</a></td>
        </tr>
        {% endif %}
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('ecoleachat') }}">
            <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
    <li>
        <a href="{{ path('ecoleachat_edit', { 'id': entity.id }) }}">
            <span class="edit">Editer</span>
        </a>
    </li>
    <li>
        <form action="{{ path('ecoleachat_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger" data-confirm="êtes vous sûre de vouloir supprimer?"><i class="icon-trash icon-white"></i> Supprimer</button>
        </form>
    </li>
</ul>
{% endblock %}