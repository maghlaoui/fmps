{% extends '::base.html.twig' %}

{% block body %}
<h3>Liste des mois gratuit</h3>

<div class="pull-right">
    <a href="{{ path('moisgratuit_new') }}">
        <span><i class="icon-plus-sign icon-white"></i> Ajouter un mois gratuit</span>
    </a>
</div>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Offre de service</th>
            <th>Mois</th>
            <th>Commentaire</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('moisgratuit_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.offreServiceId }}</td>
            <td>{{ entity.mois }}</td>
            <td>{{ entity.commentaire }}</td>
            <td>
                <ul>
                    <li><a href="{{ path('moisgratuit_show', { 'id': entity.id }) }}"><span class="detail">D&eacute;tail</span></a></li>
                    <li><a href="{{ path('moisgratuit_edit', { 'id': entity.id }) }}"><span class="edit">Editer</span></a></li>
                    <li><a href="{{ path('moisgratuit_delete', { 'id': entity.id }) }}" rel="nofollow" data-method="post" data-remote="true" data-confirm="êtes vous sûre?" class="delete_entity"><span class="delete">Supprimer</span></a></li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}