{% extends '::base.html.twig' %}

{% block body %}
<h3>Fournisseur</h3>

<table class="table table-hover">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.nom }}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ entity.adresse }}</td>
        </tr>
        <tr>
            <th>Téléphone</th>
            <td>{{ entity.telephone }}</td>
        </tr>
        <tr>
            <th>Fax</th>
            <td>{{ entity.fax }}</td>
        </tr>
        <tr>
            <th>Registre de commerce</th>
            <td>{{ entity.registreCommerce }}</td>
        </tr>
        <tr>
            <th>Numéro de patente</th>
            <td>{{ entity.numeroPatente }}</td>
        </tr>
        <tr>
            <th>Identifiant fiscale</th>
            <td>{{ entity.identifiantFiscale }}</td>
        </tr>
        <tr>
            <th>Numéro de RIB</th>
            <td>{{ entity.numeroRib }}</td>
        </tr>
        <tr>
            <th>Banque</th>
            <td>{{ entity.banque }}</td>
        </tr>
        <tr>
            <th>Attestation de RIB</th>
            <td><a href="{{ asset(entity.webPath) }}" target="_blank">{{ entity.path }}</a></td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('fournisseur') }}">
            <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
    <li>
        <a href="{{ path('fournisseur_edit', { 'id': entity.id }) }}">
            <span class="edit">Editer</span>
        </a>
    </li>
    <li>
        <form action="{{ path('fournisseur_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger" data-confirm="êtes vous sûre de vouloir supprimer?"><i class="icon-trash icon-white"></i> Supprimer</button>
        </form>
    </li>
</ul>
{% endblock %}