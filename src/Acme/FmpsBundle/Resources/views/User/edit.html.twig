{% extends '::base.html.twig' %}

{% block body %}
<h3>Editer un utilisateur</h3>

<form action="{{ path('user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn">Editer</button>
    </p>
</form>

<ul class="record_actions">
    <li><a href="{{ path('user_password_reset', { 'id': entity.id }) }}"><span class="edit">Modifier le mot de passe</span></a></li>
{% if ( is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_DRH') )  %}
    <li>
        <a href="{{ path('user') }}">
            <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
{% endif %}
</ul>
{% endblock %}