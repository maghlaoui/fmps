{% extends '::base.html.twig' %}

{% block body %}
<h3>Editer mot de passe</h3>

<form action="{{ path('user_password_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn">Editer</button>
    </p>
</form>
{% if ( is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_DRH') )  %}
<ul class="record_actions">
    <li>
        <a href="{{ path('user') }}">
            <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
</ul>
{% endif %}
{% endblock %}