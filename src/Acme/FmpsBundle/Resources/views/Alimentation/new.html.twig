{% extends '::base.html.twig' %}

{% block body %}
<h3>Ajouter une alimentation</h3>

<form action="{{ path('alimentation_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal well">
    {{ form_widget(form) }}
    <p>
        <button type="submit" class="btn">Créer</button>
				<select name="retour">
            <option value="0">Retourner à la page des alimentations</option>
						<option value="1">Ajouter une autre alimentation</option>
        </select>
    </p>
</form>

<ul class="record_actions">
    <li>
       <a href="{{ path('alimentation') }}">
            <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
</ul>
{% endblock %}