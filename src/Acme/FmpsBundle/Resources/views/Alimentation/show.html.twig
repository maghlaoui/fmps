{% extends '::base.html.twig' %}

{% block body %}
<h3>Alimentation</h3>

<table class="table table-hover">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Numéro</th>
            <td>{{ entity.numero }}</td>
        </tr>
				<tr>
            <th>Objet</th>
            <td>{{ entity.objet }}</td>
        </tr>
        <tr>
            <th>Montant</th>
            <td>{{ entity.montant|number_format(2, '.', ' ') }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.date|date('d-m-Y') }}</td>
        </tr>
        <tr>
            <th>Ecole</th>
            <td>{{ entity.ecole }}</td>
        </tr>
        <tr>
            <th>Créé par</th>
            <td>{{ entity.user }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('alimentation') }}">
            <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
    <li>
        <a href="{{ path('alimentation_edit', { 'id': entity.id }) }}">
            <span class="edit">Editer</span>
        </a>
    </li>
    <li>
        <form action="{{ path('alimentation_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger" data-confirm="êtes vous sûre de vouloir supprimer?"><i class="icon-trash icon-white"></i> Supprimer</button>
        </form>
    </li>
</ul>
{% endblock %}