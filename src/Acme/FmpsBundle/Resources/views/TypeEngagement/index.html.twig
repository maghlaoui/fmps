{% extends '::base.html.twig' %}

{% block body %}
<h3>Liste des types d'engagement</h3>

<div class="pull-right">
    <a href="{{ path('typeengagement_new') }}">
        <span><i class="icon-plus-sign icon-white"></i> Ajouter un type d'engagement</span>
    </a>
</div>

{% if entities.count == 0 %}
    <div class="flash notice">Désolé. Aucun type d'engagement n'a été trouvé</div>
{% else %}

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th width="25">{{ entities.sortable('Id', 't.id')|raw }}</th>
            <th>{{ entities.sortable('Libellé', 't.libelleTypeEngagement')|raw }}</th>
            <th width="150">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
            <td><a href="{{ path('typeengagement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.libelleTypeEngagement }}</td>
            <td>
                <ul>
                    <li><a href="{{ path('typeengagement_show', { 'id': entity.id }) }}"><span class="detail">D&eacute;tail</span></a></li>
                    <li><a href="{{ path('typeengagement_edit', { 'id': entity.id }) }}"><span class="edit">Editer</span></a></li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="navigation">
    {{ entities.render()|raw }}
</div>
{% endif %}
{% endblock %}