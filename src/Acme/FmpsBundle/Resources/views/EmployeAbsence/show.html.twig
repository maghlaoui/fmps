{% extends '::base.html.twig' %}

{% block body %}
<h3>Absence</h3>

<table class="table table-hover">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
				<tr>
            <th>Employé</th>
            <td>{{ entity.employe }}</td>
        </tr>
        <tr>
            <th>Du</th>
            <td>{{ entity.du|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Au</th>
            <td>{% if entity.au %} {{ entity.au|date('Y-m-d') }} {% endif %}</td>
        </tr>
        <tr>
            <th>Motif</th>
            <td>{{ entity.motif }}</td>
        </tr>
        <tr>
            <th>Justifiée</th>
            <td>{{ entity.justifie == '1' ? 'oui' : 'non' }}</td>
        </tr>
        <tr>
            <th>Commentaire</th>
            <td>{{ entity.commentaire }}</td>
        </tr>
				{% if entity.path %}
				<tr>
	          <th>Fichier</th>
	          <td><a href="{{ asset(entity.webPath) }}" target="_blank">Télécharger</a></td>
	      </tr>
				{% endif %}
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('employeabsence') }}">
            <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
    <li>
        <a href="{{ path('employeabsence_edit', { 'id': entity.id }) }}">
           <span class="edit">Editer</span>
        </a>
    </li>
    <li>
        <form action="{{ path('employeabsence_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="delete"><i class="icon-trash icon-white"></i> Supprimer</button>
        </form>
    </li>
</ul>
{% endblock %}