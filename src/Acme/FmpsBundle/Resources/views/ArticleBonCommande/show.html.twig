{% extends '::base.html.twig' %}

{% block body %}
<h3>Statistiques sur les immobilisations</h3>

<table class="table table-hover">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Article</th>
            <td>{{ entity.article }}</td>
        </tr>
        <tr>
            <th>Bon de commande</th>
            <td>{{ entity.bonCommande }}</td>
        </tr>
        <tr>
            <th>Prix unitaire</th>
            <td>{{ entity.prixUnitaire }}</td>
        </tr>
        <tr>
            <th>Quantite</th>
            <td>{{ entity.quantite }}</td>
        </tr>
        <tr>
            <th>Utilisateur</th>
            <td>{{ entity.user }}</td>
        </tr>
        <tr>
            <th>Tva</th>
            <td>{{ entity.tva }}</td>
        </tr>
		<tr>
            <th>Créé le</th>
            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Dernière mise à jour</th>
            <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('articleboncommande') }}">
            <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
    <li>
        <a href="{{ path('articleboncommande_edit', { 'id': entity.id }) }}">
            <span class="edit">Editer</span>
        </a>
    </li>
    <li>
        <form action="{{ path('articleboncommande_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger" data-confirm="êtes vous sûre de vouloir supprimer?"><i class="icon-trash icon-white"></i> Supprimer</button>
        </form>
    </li>
</ul>
{% endblock %}