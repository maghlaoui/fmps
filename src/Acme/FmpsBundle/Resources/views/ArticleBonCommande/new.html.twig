{% extends '::base.html.twig' %}

{% block body %}
<h3>Ajouter un article au bon de commande</h3>

<form action="{{ path('articleboncommande_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal well">
    {{ form_widget(form) }}
    <p>
        <button type="submit" class="btn">Ajouter</button>
        <select name="retour">     
            <option value="1">Ajouter un autre article</option>
            <option value="0">Retourner à la page du bon de commande</option>
            <option value="2">Retourner à la liste des article bon de commande</option>
        </select>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('articleboncommande') }}">
            <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
</ul>
{% endblock %}