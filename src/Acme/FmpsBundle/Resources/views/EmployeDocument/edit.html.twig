{% extends '::base.html.twig' %}

{% block body %}
<h1>Editer un document d'un employé</h1>

<form action="{{ path('employedocument_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
   
 {{ form_row(edit_form._token) }} 
  <div>
    {{ form_label(edit_form.employe) }}
    {{ form_widget(edit_form.employe) }}
  </div>

  <div>
    {{ form_label(edit_form.titre) }}
    {{ form_widget(edit_form.titre) }}
  </div>

	<div>
    {{ form_label(edit_form.fichier) }}
    {{ form_widget(edit_form.fichier) }}
  </div>

	<div>
    {{ form_label(edit_form.type_document) }}
    {{ form_widget(edit_form.type_document) }}
    <a href="#content-div" class="fancybox"><span><i class="icon-plus-sign icon-white"></i> Ajouter un type de document</span></a>
  </div>

    <p>
        <button type="submit">Editer</button>
    </p>
</form>

<div id="content-div" style="display: none">

<h1>Ajouter un type de document</h1>

<form action="{{ path('typedocument_create') }}" class="ajax_form" method="post" {{ form_enctype(type_document_form) }}>
    {{ form_widget(type_document_form) }}
    <input type="hidden" name="dom_id" value="employe_document_type_document" />
    <p>
        <button type="submit">Créer</button>
    </p>
</form>

</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('employedocument') }}">
            <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
    <li>
        <form action="{{ path('employedocument_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="delete"><i class="icon-trash icon-white"></i> Supprimer</button>
        </form>
    </li>
</ul>
{% endblock %}