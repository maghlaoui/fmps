{% extends '::base.html.twig' %}

{% block body %}
<h3>Ajouter un article</h3>

<form action="{{ path('article_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal well">
    
   <div>
    {{ form_errors(form) }}
   </div>
   
   <div>
    {{ form_label(form.designation) }}
    {{ form_widget(form.designation) }}
   </div>
   
   <div>
    {{ form_label(form.description) }}
    {{ form_widget(form.description) }}
   </div>
   
   {{ form_rest(form) }}
    <p>
        <button type="submit" class="btn">Cr√©er</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('article') }}">
            <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
</ul>
{% endblock %}