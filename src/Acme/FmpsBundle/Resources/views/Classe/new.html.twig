{% extends '::base.html.twig' %}

{% block body %}
<h3>Ajouter une classe</h3>

<form action="{{ path('classe_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal well" class="form-horizontal well">
    {{ form_widget(form) }}
    <p>
        <button type="submit" class="btn">Ajouter une classe</button>
				<select name="retour">
            <option value="1">Ajouter une autre classe</option>
            <option value="0">Retourner à la page de la classe</option>
            <option value="2">Retourner à la liste des classes</option>
        </select>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('classe') }}">
            <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
</ul>
{% endblock %}