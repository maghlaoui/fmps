{% extends '::base.html.twig' %}

{% block body %}
<h3>Attachement</h3>

<table class="table table-hover">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Fichier</th>
            <td>{{ entity.fichier }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('attachement') }}">
               <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
    <li>
        <a href="{{ path('attachement_edit', { 'id': entity.id }) }}">
           <span class="edit">Editer</span>
        </a>
    </li>
    <li>
        <form action="{{ path('attachement_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}