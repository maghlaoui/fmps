{% extends '::base.html.twig' %}

{% block body %}
<h3>Attachement edit</h3>

<form action="{{ path('attachement_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('attachement') }}">
             <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
    <li>
        <form action="{{ path('attachement_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}