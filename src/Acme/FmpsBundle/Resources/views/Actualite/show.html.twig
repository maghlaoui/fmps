{% extends '::base.html.twig' %}

{% block body %}
<h3>Actualité</h3>

<table class="table table-hover">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Créé par</th>
            <td>{{ entity.userId }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Contenu</th>
            <td>{{ entity.content }}</td>
        </tr>
        <tr>
            <th>Publié</th>
            <td>{{ entity.published }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ entity.roles }}</td>
        </tr>
        <tr>
            <th>Hits</th>
            <td>{{ entity.hits }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('actualite') }}">
         <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
    <li>
        <a href="{{ path('actualite_edit', { 'id': entity.id }) }}">
           <span class="edit">Editer</span>
        </a>
    </li>
    <li>
        <form action="{{ path('actualite_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn"><i class="icon-trash icon-white"></i> Supprimer</button>
        </form>
    </li>
</ul>
{% endblock %}
