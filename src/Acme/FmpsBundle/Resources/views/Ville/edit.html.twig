{% extends '::base.html.twig' %}

{% block body %}
<h3>Editer une ville</h3>

<form action="{{ path('ville_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn">Editer</button>
    </p>
    <p class="required_notes">Les champs indiqués par un astérisque sont obligatoires.</p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('ville') }}">
            <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
    <li>
        <form action="{{ path('ville_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger" data-confirm="êtes vous sûre de vouloir supprimer?"><i class="icon-trash icon-white"></i> Supprimer</button>
        </form>
    </li>
</ul>
{% endblock %}