{% extends '::base.html.twig' %}

{% block body %}
<h3>Chargé du partenariat</h3>

<table class="table table-hover">
    <tbody>
        <tr>
            <th width="250">Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Partenariat</th>
            <td>{{ entity.partenariat }}</td>
        </tr>
        <tr>
            <th>Contact</th>
            <td>{{ entity.contact }}</td>
        </tr>
        <tr>
            <th>Date du début de l'affectation</th>
            <td>{% if entity.dateAffectationGestion %}{{ entity.dateAffectationGestion|date('d-m-Y') }}{% endif%}</td>
        </tr>
        <tr>
            <th>Date de la fin de l'affectation</th>
            <td>{% if entity.dateFinAffectationGestion %}{{ entity.dateFinAffectationGestion|date('d-m-Y') }}{% endif%}</td>
        </tr>       
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('gestionpartenariat') }}">
            <span class="back">Retour &agrave; la liste</span>
        </a>
    </li>
    <li>
        <a href="{{ path('gestionpartenariat_edit', { 'id': entity.id }) }}">
            <span class="edit">Editer</span>
        </a>
    </li>
    <li>
        <form action="{{ path('gestionpartenariat_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger" data-confirm="êtes vous sûre de vouloir supprimer?"><i class="icon-trash icon-white"></i> Supprimer</button>
        </form>
    </li>
</ul>
{% endblock %}